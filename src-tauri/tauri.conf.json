{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "tauri-desk",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "数据展示看板",
        "height": 1200,
        "width": 1600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "tauri-desk.app",
      "category": "Utility",
      "shortDescription": "网速监控工具",
      "longDescription": "Net Stats是一个使用 Tauri 和 Solid 构建的网速监控工具",
      "windows": {
        "wix": {
          "language": "zh-CN"
        },
        "nsis": {
          "languages": [
            "SimpChinese",
            "English"
          ],
          "displayLanguageSelector": true
        }
      },
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
